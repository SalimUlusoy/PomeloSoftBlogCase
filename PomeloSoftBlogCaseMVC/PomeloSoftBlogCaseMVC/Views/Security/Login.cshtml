
@{
    ViewData["Title"] = "Giriş Sayfası";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="sidenav">
    <div class="login-main-text">
        <h2>Pomelo Blog<br> Giriş Sayfası</h2>
        <p>Giriş veya Kayıt işlemlerinizi gerçekleştirebilirsiniz.</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form asp-action="Login">
                <div class="form-group">
                    <label>User Name</label>
                    <input type="text" name="userName" id="userName" class="form-control" placeholder="User Name">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-black">Login</button>
                <button type="submit" name="Register" id="Register" class="btn btn-secondary" asp-area="" asp-controller="Security" asp-action="Register">Register</button>

            </form>
            <br />
            <span style="color:red">@Html.Label((string)ViewBag.Name)</span>
        </div>
    </div>
</div>


